import java.util.Scanner;

class ReverseNumber {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int num = sc.nextInt();

        int rev = 0;

        do {
            int digit = num % 10;       
            rev = rev * 10 + digit;    
            num = num / 10;           
        } while (num != 0);

        System.out.println("Reversed number = " + rev);
    }
}
